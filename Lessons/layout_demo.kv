Screen:
    size: 500, 500

    MDBoxLayout:
        id: main_box
        orientation: 'vertical'
        size_hint: 1, .3
        pos_hint: {'center_x': .5, 'center_y': .5}

        md_bg_color: app.theme_cls.primary_color

        MDTextField:
            id: user_start_x
            hint_text: 'Enter text'
            mode: 'rectangle'
            on_text: app.set_counter()
            size_hint: .20, .10
            pos_hint: {'center_x': .5}

        MDBoxLayout:
            id: second_box
            orientation: 'horizontal'
            md_bg_color: app.theme_cls.primary_color
            size_hint: 1, .3

            MDLabel:
                id: counter_label
                font_style: 'H3'

            MDBoxLayout:
                id: third_box
                orientation: 'vertical'

                MDRaisedButton:
                    id: plus_button
                    text: '+1'
                    pos_hint: {'center_x': .5}
                    size_hint: 1, .3
                    on_release: app.change("up")
                    md_bg_color: "#00FF00"


                MDRaisedButton:
                    id: minus_button
                    text: '-1'
                    pos_hint: {'center_x': .5}
                    size_hint: 1, .3
                    on_release: app.change("down")
                    md_bg_color: "#FF0000"