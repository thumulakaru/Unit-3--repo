ScreenManager:
    id:scr_manager

    IntroScreen:
        name:"IntroScreen"

    PrepareDough:
        name:"PrepareDough"

    RiseDough:
        name:"RiseDough"

    SpreadDough:
        name:"SpreadDough"

    SpreadTomato:
        name:"SpreadTomato"

    PutCheese:
        name:"PutCheese"

    AddToppings:
        name:"AddToppings"

    AddChilliFlakes1:
        name:"AddChilliFlakes1"

    AddChilliFlakes2:
        name:"AddChilliFlakes2"

    AddChilliFlakes3:
        name:"AddChilliFlakes3"

    BakePizza:
        name:"BakePizza"

    EnjoyPizza:
        name:"EnjoyPizza"

<IntroScreen>
    MDCard:
        size_hint: .7, .7
        pos_hint:{"center_x": .5,"center_y": .5 }
        md_bg_color: "#219ebc"
        orientation: "vertical"

        MDLabel:
            text: "Pizza Tutorial"
            font_style: "H5"
            halign: "center"
            size_hint: 1, .1

        FitImage:
            size_hint: 1, .3
            source:"pizza_intro.jpeg"

        MDRaisedButton:
            text: "Start"
            on_press: root.parent.current = "PrepareDough"
            pos_hint: {"center_x":.5}

<PrepareDough>
    MDCard:
        size_hint: .7, .7
        pos_hint:{"center_x": .5,"center_y": .5 }
        md_bg_color: "#219ebc"
