        MDLabel:
            text: "Prepare the dough"
            font_style: "H5"
            halign: "center"
            size_hint: 1, .1
            color: "#FFFFFF"

        FitImage:
            size_hint: 1, .3
            radius: 36, 36, 0, 0
            source:"prepare_dough.jpeg"

        MDRaisedButton:
            text: "Next Step"
            on_press: root.parent.current = "RiseDough"
            pos_hint: {"center_x":.5}

        MDRaisedButton:
            text: "Previous Step"
            on_press: root.parent.current = "IntroScreen"
            pos_hint: {"center_x":.5}

